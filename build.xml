<?xml version="1.0" encoding="utf-8"?>
<project default="all">

    <taskdef name="install4j"
        classname="com.install4j.Install4JTask"
        classpath="/opt/install4j6/bin/ant.jar"/>

    <property name="src" location="src"/>
    <property name="bin" location="bin"/>
    <property name="resources" location="resources"/>
    <property name="lib" location="lib"/>
    <property name="jarfile" location="JHelioviewer.jar"/>
    <fileset id="libfiles" dir="">
        <include name="**/*.jar"/>
    </fileset>
    <manifestclasspath property="manifest_cp" jarfile="${jarfile}">
        <classpath>
            <fileset refid="libfiles"/>
        </classpath>
    </manifestclasspath>
    <loadfile property="version" srcFile="VERSION"/>

    <target name="clean">
        <delete dir="${bin}"/>
        <delete file="${jarfile}"/>
    </target>

    <target name="compile">
        <mkdir dir="${bin}"/>
        <javac srcdir="${src}" destdir="${bin}">
            <classpath>
                <fileset dir="${src}"/>
                <fileset refid="libfiles"/>
            </classpath>
        </javac>
    </target>

    <target name="jar" depends="compile">
        <jar destfile="${jarfile}">
            <fileset dir="${bin}"/>
            <fileset dir="${resources}"/>
            <manifest>
                <attribute name="Main-Class" value="org.helioviewer.jhv.JHelioviewer"/>
                <attribute name="Class-Path" value="${manifest_cp}"/>
                <attribute name="version" value="${version}"/>
                <attribute name="revision" value="1"/>
            </manifest>
        </jar>
    </target>

    <target name="deploy" depends="compile">
        <install4j projectfile="build/JHelioviewer-build.install4j"/> 
    </target>

    <target name="run" depends="jar">
        <java jar="${jarfile}" fork="true"/>
    </target>

    <target name="all" depends="jar"/>

</project>
